{
  "apps": [
    {
      "exec_mode": "fork_mode",
      "script": "/var/www/bin/www",
      "name": "App",
      "node_args": [ "--harmony" ],
      "env": {
        "PORT": 80,
        "NODE_ENV": "production",
        "NODE_PATH": "/var/www/"
      },
      "error_file": "/var/www/logs/app-err.log",
      "out_file": "/var/www/logs/app-out.log"
    },
    {
      "exec_mode": "fork_mode",
      "script": "/var/www/Librarian/",
      "name": "Librarian",
      "max_memory_restart": "400M",
      "node_args": [ "--harmony" ],
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "/var/www/"
      },
      "error_file": "/var/www/logs/Librarian-err.log",
      "out_file": "/var/www/logs/Librarian-out.log"
    },
    {
      "exec_mode": "fork_mode",
      "script": "/var/www/Bots/",
      "name": "Bots",
      "node_args": [ "--harmony" ],
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "/var/www/"
      },
      "error_file": "/var/www/logs/Bots.err.log",
      "out_file": "/var/www/logs/Bots.out.log"
    },
    {
      "exec_mode": "fork_mode",
      "script": "/var/www/Postman/",
      "name": "Postman",
      "node_args": [ "--harmony" ],
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "/var/www/"
      },
      "error_file": "/var/www/logs/Postman.err.log",
      "out_file": "/var/www/logs/Postman.out.log"
    }
  ]
}
