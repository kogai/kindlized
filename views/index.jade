extends layout

block content
	h1= title
	p Welcome , #{users}
	form( action='/process/logout' , method='POST' )
		.btn-group
			button(type='submit' , class='btn btn-default btn-sm') ログアウト
	form( action='/process/author', method='POST' )
		input(type='text' , name='authorRegist')
		button(type='submit' , class='btn btn-default btn-sm') 新しく著者を登録
	#authors_all
		ul
			li(v-repeat='authors_all')
				{{name}}
	#books_all
		ul.list-group.media-list.row
			li(v-repeat='books_all').list-group-item.media.col-md-3
				a(href="{{DetailPageURL}}", target='_blank').media-left
					img(src="{{img.MediumImage}}", alt="{{titile}}")
				.media-body
					{{title}}
