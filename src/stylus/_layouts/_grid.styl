
// 溝なしのグリッド

colum( $columNum, $columWidth )
	box-sizing(border-box)
	&.ss-colum-{$columNum}
		width: $columWidth
	&.ss-colum-img
		img
			display: block
			max-width: 100%
			height: auto

.l-colum-10
	colum( 1, 10% )
	colum( 9, 90% )

.l-colum-9
	colum( 1, 11% )

.l-colum-6
	colum( 1, 16.5% )
	colum( 2, 33% )
	colum( 3, 49.5% )
	colum( 4, 66% )
	colum( 5, 82.5% )

.l-colum-5
	colum( 1, 20% )

.l-colum-4
	colum( 1, 25% )
	colum( 2, 50% )
	colum( 3, 75% )

.l-colum-2
	colum( 1, 50% )



// 溝付きのグリッド

gutter( $columCount, $columNum, $columWidth, $gutterWidth )
	&.ss-gutter-{$columNum}
		width: $columWidth
		margin-right: $gutterWidth
		&:nth-child( {$columCount}n )
			margin-right: 0

	&.ss-img
		img
			display: block
			max-width: 100%
			height: auto


